<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CameraxActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/cameraxViewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_capture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/take_photo"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/light_blue" />

    <ImageView
        android:id="@+id/ivFlipCamera"
        android:contentDescription="@string/flip_camera"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_flip_camera"
        app:layout_constraintBottom_toBottomOf="@+id/iv_capture"
        app:layout_constraintEnd_toStartOf="@+id/iv_capture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_capture"
        app:tint="@color/light_blue" />

</androidx.constraintlayout.widget.ConstraintLayout>